@model BaiDang

@{
    ViewData["Title"] = "Chi tiết bài đăng";
    Layout = "~/Areas/CSKH/Views/Shared/_LayoutCSKH.cshtml";
}

<h2 class="mb-4">Chi tiết bài đăng</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NoiDung)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.NoiDung)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.AnhVideo)</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.AnhVideo))
                {
                    <img src="/@Model.AnhVideo" alt="Ảnh bài đăng" width="250" class="img-thumbnail" />
                }
                else
                {
                    <span class="text-muted">Không có ảnh</span>
                }
            </dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.LuotLike)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.LuotLike)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.KhachHang)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.KhachHang.HoTen)</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-secondary" asp-action="Index">Quay lại danh sách</a>
</div>
