@model IEnumerable<BaiDang>

@{
    ViewData["Title"] = "Danh sách bài đăng";
    Layout = "~/Areas/CSKH/Views/Shared/_LayoutCSKH.cshtml";
}

<h2 class="mb-4">Danh sách bài đăng</h2>

<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.NoiDung)</th>
            <th>@Html.DisplayNameFor(model => model.AnhVideo)</th>
            <th>@Html.DisplayNameFor(model => model.LuotLike)</th>
            <th>@Html.DisplayNameFor(model => model.KhachHang)</th>
            <th class="text-center">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NoiDung)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.AnhVideo))
                    {
                        <img src="/@item.AnhVideo" alt="Ảnh" width="100" class="img-thumbnail" />
                    }
                    else
                    {
                        <span class="text-muted">Không có ảnh</span>
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.LuotLike)</td>
                <td>@Html.DisplayFor(modelItem => item.KhachHang.HoTen)</td>
                <td class="text-center">
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.MaBaiDang">Chi tiết</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.MaBaiDang">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
