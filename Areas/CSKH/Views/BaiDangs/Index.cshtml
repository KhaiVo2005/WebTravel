@model IEnumerable<BaiDang>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/CSKH/Views/Shared/_LayoutCSKH.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NoiDung)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnhVideo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LuotLike)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KhachHang)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NoiDung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnhVideo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LuotLike)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KhachHang.MaKH)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.MaBaiDang">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaBaiDang">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
