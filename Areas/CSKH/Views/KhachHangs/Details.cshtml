@model KhachHang

@{
    ViewData["Title"] = "Chi tiết khách hàng";
    Layout = "~/Areas/CSKH/Views/Shared/_LayoutCSKH.cshtml";
}

<h2 class="mb-4">Chi tiết khách hàng</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Họ tên</dt>
            <dd class="col-sm-9">@Model.HoTen</dd>

            <dt class="col-sm-3">Tên đăng nhập</dt>
            <dd class="col-sm-9">@Model.TenDangNhap</dd>

            <dt class="col-sm-3">Mật khẩu</dt>
            <dd class="col-sm-9">@Model.MatKhau</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Địa chỉ</dt>
            <dd class="col-sm-9">@Model.DiaChi</dd>

            <dt class="col-sm-3">Ngày sinh</dt>
            <dd class="col-sm-9">@Model.NgaySinh.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Giới tính</dt>
            <dd class="col-sm-9">@Model.GioiTinh</dd>

            <dt class="col-sm-3">Số điện thoại</dt>
            <dd class="col-sm-9">@Model.SoDienThoai</dd>

            <dt class="col-sm-3">Ảnh đại diện</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.AnhDaiDien))
                {
                    <img src="~/images/@Model.AnhDaiDien" alt="Ảnh đại diện" style="max-height:150px;" class="rounded shadow-sm" />
                }
                else
                {
                    <em>Chưa có ảnh</em>
                }
            </dd>
        </dl>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div>
