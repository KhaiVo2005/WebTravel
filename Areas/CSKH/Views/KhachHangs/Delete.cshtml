@model KhachHang

@{
    ViewData["Title"] = "Xoá khách hàng";
    Layout = "~/Areas/CSKH/Views/Shared/_LayoutCSKH.cshtml";
}

<h2 class="mb-4 text-danger">Xác nhận xoá khách hàng</h2>

<div class="card border-danger">
    <div class="card-body">
        <h5>Bạn có chắc chắn muốn xoá khách hàng này không?</h5>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Họ tên</dt>
            <dd class="col-sm-9">@Model.HoTen</dd>

            <dt class="col-sm-3">Tên đăng nhập</dt>
            <dd class="col-sm-9">@Model.TenDangNhap</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Số điện thoại</dt>
            <dd class="col-sm-9">@Model.SoDienThoai</dd>

            <dt class="col-sm-3">Ảnh đại diện</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.AnhDaiDien))
                {
                    <img src="/@Model.AnhDaiDien" alt="Ảnh đại diện" style="max-height:120px;" class="rounded" />
                }
                else
                {
                    <em>Chưa có ảnh</em>
                }
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="MaKH" />
            <button type="submit" class="btn btn-danger">Xoá</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Huỷ</a>
        </form>
    </div>
</div>
