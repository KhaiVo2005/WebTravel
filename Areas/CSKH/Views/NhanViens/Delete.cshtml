@model NhanVien

@{
    ViewData["Title"] = "Xoá nhân viên";
    Layout = "~/Areas/CSKH/Views/Shared/_LayoutCSKH.cshtml";
}

<h2 class="mb-4 text-danger">Xác nhận xoá</h2>

<div class="card border-danger">
    <div class="card-body">
        <h4 class="text-danger">Bạn có chắc chắn muốn xoá nhân viên này không?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Họ tên</dt>
            <dd class="col-sm-9">@Model.HoTen</dd>

            <dt class="col-sm-3">Tên đăng nhập</dt>
            <dd class="col-sm-9">@Model.TenDangNhap</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">SĐT</dt>
            <dd class="col-sm-9">@Model.SoDienThoai</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="MaNV" />
            <button type="submit" class="btn btn-danger">Xoá</button>
            <a asp-action="Index" class="btn btn-secondary ml-2">Huỷ</a>
        </form>
    </div>
</div>
