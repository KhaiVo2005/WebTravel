@model IEnumerable<NhanVien>

@{
    ViewData["Title"] = "Danh sách nhân viên";
    Layout = "~/Areas/CSKH/Views/Shared/_LayoutCSKH.cshtml";
}

<h2 class="mb-4">Danh sách nhân viên</h2>

<table class="table table-bordered table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.HoTen)</th>
            <th>@Html.DisplayNameFor(model => model.TenDangNhap)</th>
            <th>@Html.DisplayNameFor(model => model.MatKhau)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.SoDienThoai)</th>
            <th>@Html.DisplayNameFor(model => model.DiaChi)</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HoTen</td>
                <td>@item.TenDangNhap</td>
                <td>@item.MatKhau</td>
                <td>@item.Email</td>
                <td>@item.SoDienThoai</td>
                <td>@item.DiaChi</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MaNV" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.MaNV" class="btn btn-danger btn-sm">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
