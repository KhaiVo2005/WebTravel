<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Admin Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-dark text-white p-3" style="width: 250px; min-height: 100vh;">
            <h4 class="mb-4">Admin Panel</h4>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home me-2"></i>Trang chủ
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-controller="KhachHangs" asp-action="Index">
                        <i class="fas fa-user me-2"></i>Quản lý người dùng
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-controller="NhanViens" asp-action="Index">
                        <i class="fas fa-user-tie me-2"></i>Quản lý nhân viên
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-controller="LoaiDichVus" asp-action="Index">
                        <i class="fas fa-concierge-bell me-2"></i>Quản lý dịch vụ
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-controller="DiaDiems" asp-action="Index">
                        <i class="fas fa-map-marker-alt me-2"></i>Quản lý địa điểm
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-controller="BaiDangs" asp-action="Index">
                        <i class="fas fa-newspaper me-2"></i>Quản lý bài viết
                    </a>
                </li>
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-controller="ThanhPhoes" asp-action="Index">
                        <i class="fas fa-city me-2"></i>Quản lý thành phố
                    </a>
                </li>
            </ul>
        </div>

        <!-- Page content -->
        <div class="flex-grow-1">
            <nav class="navbar navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <span class="navbar-brand">Dashboard - @ViewData["Title"]</span>
                </div>
            </nav>
            <main class="p-4" style="overflow-y: auto; max-height: 100vh;">
                @RenderBody()
            </main>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
