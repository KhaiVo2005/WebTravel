@model LoaiDichVu

@{
    ViewData["Title"] = "Xóa dịch vụ";
    Layout = "~/Areas/CSKH/Views/Shared/_LayoutCSKH.cshtml";
}

<h2 class="text-danger mb-3">Xác nhận xóa dịch vụ</h2>

<div class="alert alert-warning">
    Bạn có chắc chắn muốn <strong>xóa</strong> dịch vụ <strong>@Model.TenDV</strong> không?
</div>

<div class="border rounded p-3 mb-3">
    <dl class="row">
        <dt class="col-sm-3">Tên dịch vụ</dt>
        <dd class="col-sm-9">@Model.TenDV</dd>

        <dt class="col-sm-3">Giá</dt>
        <dd class="col-sm-9">@Model.GiaDV.ToString("N0") đ</dd>

        <dt class="col-sm-3">Mô tả</dt>
        <dd class="col-sm-9">@Model.MoTa</dd>

        <dt class="col-sm-3">Ảnh</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.Anh))
            {
                <img src="/@Model.Anh" alt="Ảnh dịch vụ" width="100" class="rounded border" />
            }
            else
            {
                <span class="text-muted">Không có ảnh</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MaLoaiDV" />
        <button type="submit" class="btn btn-danger">🗑️ Xác nhận xóa</button>
        <a asp-action="Index" class="btn btn-outline-secondary ms-2">← Quay lại</a>
    </form>
</div>
