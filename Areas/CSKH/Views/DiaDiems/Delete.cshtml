@model DiaDiem

@{
    ViewData["Title"] = "Xoá địa điểm";
    Layout = "~/Areas/CSKH/Views/Shared/_LayoutCSKH.cshtml";
}

<h2 class="mb-4 text-danger">Xác nhận xoá địa điểm</h2>

<div class="alert alert-warning">
    <strong>Bạn có chắc chắn muốn xoá địa điểm này không?</strong>
</div>

<div class="card mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Tên địa điểm</dt>
            <dd class="col-sm-9">@Model.TenDiaDiem</dd>

            <dt class="col-sm-3">Mô tả</dt>
            <dd class="col-sm-9">@Model.MoTa</dd>

            <dt class="col-sm-3">Ảnh</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.Anh))
                {
                    <img src="/@Model.Anh" width="250" class="img-thumbnail" />
                }
                else
                {
                    <span class="text-muted">Không có ảnh</span>
                }
            </dd>

            <dt class="col-sm-3">Thành phố</dt>
            <dd class="col-sm-9">@Model.ThanhPho?.TenThanhPho</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="MaDD" />
    <button type="submit" class="btn btn-danger">Xoá</button>
    <a asp-action="Index" class="btn btn-secondary ml-2">Huỷ</a>
</form>
