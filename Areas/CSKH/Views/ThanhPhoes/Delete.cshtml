@model ThanhPho

@{
    ViewData["Title"] = "Xoá thành phố";
    Layout = "~/Areas/CSKH/Views/Shared/_LayoutCSKH.cshtml";
}

<h2 class="mb-4 text-danger">Xác nhận xoá</h2>

<div class="card border-danger">
    <div class="card-body">
        <p class="fw-bold text-danger">Bạn có chắc chắn muốn xoá thành phố này?</p>

        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.TenThanhPho)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.TenThanhPho)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="MaTP" />
            <button type="submit" class="btn btn-danger">Xoá</button>
            <a asp-action="Index" class="btn btn-secondary">Huỷ</a>
        </form>
    </div>
</div>
