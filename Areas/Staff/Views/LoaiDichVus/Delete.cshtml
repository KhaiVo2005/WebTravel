@model LoaiDichVu

@{
    ViewData["Title"] = "Xoá dịch vụ";
    Layout = "~/Areas/Staff/Views/Shared/_LayoutStaff.cshtml";
}

<h2 class="mb-4 text-danger">Xoá loại dịch vụ</h2>

<div class="alert alert-warning">
    Bạn có chắc chắn muốn xoá dịch vụ sau không?
</div>

<div class="card mb-4">
    <div class="row g-0">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.Anh))
            {
                <img src="/@Model.Anh" class="img-fluid rounded-start" alt="Ảnh dịch vụ" />
            }
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.TenDV</h5>
                <p><strong>Giá:</strong> @Model.GiaDV.ToString("N0") ₫</p>
                <p><strong>Mô tả:</strong> @Model.MoTa</p>
                <p>
                    <strong>Trạng thái:</strong>
                    @if (Model.TrangThai == 0)
                    {
                        <span class="badge bg-warning text-dark">⏳ Chờ duyệt</span>
                    }
                    else if (Model.TrangThai == 1)
                    {
                        <span class="badge bg-success">✔️ Đã duyệt</span>
                    }
                    else if (Model.TrangThai == 2)
                    {
                        <span class="badge bg-danger">❌ Từ chối</span>
                    }
                </p>
                <p><strong>Nhân viên:</strong> @Model.NhanVien?.HoTen</p>
                <p><strong>Địa điểm:</strong> @Model.DiaDiem?.TenDiaDiem</p>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="MaLoaiDV" />
                    <button type="submit" class="btn btn-danger">Xoá</button>
                    <a asp-action="Index" class="btn btn-secondary">Huỷ</a>
                </form>
            </div>
        </div>
    </div>
</div>
