@model LoaiDichVu

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Staff/Views/Shared/_LayoutStaff.cshtml";
}

<h2 class="mb-4">Tạo mới loại dịch vụ</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="TenDV" class="form-label"></label>
                <input asp-for="TenDV" class="form-control" />
                <span asp-validation-for="TenDV" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="GiaDV" class="form-label"></label>
                <input asp-for="GiaDV" class="form-control" />
                <span asp-validation-for="GiaDV" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MoTa" class="form-label"></label>
                <textarea asp-for="MoTa" class="form-control"></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Anh" class="form-label">Ảnh dịch vụ</label>
                <input asp-for="Anh" class="form-control" type="file" />
                <span asp-validation-for="Anh" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MaDD" class="form-label">Địa điểm</label>
                <select asp-for="MaDD" class="form-select" asp-items="ViewBag.MaDD"></select>
                <span asp-validation-for="MaDD" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Tạo mới</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
