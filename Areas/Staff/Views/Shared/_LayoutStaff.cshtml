<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Staff.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
</head>
<body>

    <header>
        <div class="app-name">🌍 App Du Lịch - Dashboard</div>
        <div class="user-info">Ngọc Khải (Nhân viên)</div>
    </header>

    <!-- Layout -->
    <div class="layout">

        <!-- ⬅️ SIDEBAR -->
        <nav class="sidebar">
            <ul>
                <li><a asp-area="Staff" asp-controller="Home" asp-action="Index">🏠 Trang chính</a></li>
                <li><a asp-area="Staff" asp-controller="LoaiDichVus" asp-action="Index">🛠️ Quản lý dịch vụ</a></li>
                <li><a href="#">📋 Thông tin đặt</a></li>
                <li><a href="#">👤 Tài khoản</a></li>
            </ul>
        </nav>

        <!-- ➡️ MAIN CONTENT -->
        <main class="main-content">
            @RenderBody()
        </main>

    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
